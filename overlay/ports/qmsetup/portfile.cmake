vcpkg_from_github(
    OUT_SOURCE_PATH SOURCE_PATH
    REPO stdware/qmsetup
    REF 255d2ff6a63977af5eca3817f1e7347b73f4d2ea
    SHA512 5af7e473de560277649153243896c8cce4aff74599a906d7d4ed7d1216e13a9f7f7567bf21f3ff70f03c02003d1f8773638708865c1ed15362ee41e51952b3dd
)

vcpkg_cmake_configure(
    SOURCE_PATH "${SOURCE_PATH}"
    OPTIONS
    -DQMSETUP_VCPKG_TOOLS_HINT=ON
    -DQMSETUP_STATIC_RUNTIME=OFF
)

vcpkg_cmake_install()

vcpkg_cmake_config_fixup(PACKAGE_NAME ${PORT}
