    margin-bottom: 30px;
    margin-left: 15px;
}

QLabel#VideoGridTitle {
    color: #302f2f;
    font-weight: 500;
    font-size: 16px;
    margin-top: 20px;
}

QLabel#VideoGridAuthor,
#VideoGridDuration,
