QProgressBar {
    border-radius: 2px;
    text-align: center;
    min-height: 6px;
    max-height: 6px;
}

QProgressBar::chunk {
    border-radius: 2px;
    background-color: #5a7584;
    margin: 0.5px;
}

/* Setting Page */

QLabel {
    color: #5c5c5c;
    font-weight: 500;
    font-size: 14px;
    /*padding-left: 5px;*/
}

QRadioButton {
    color: #2f2f2f;
}

QRadioButton::indicator {
    width: 16px;
    height: 16px;
    padding-right: 10px;
}

QRadioButton::indicator::unchecked {

    image: url(:/icon/setting/unchecked.svg);
}

QRadioButton::indicator::checked {

    image: url(:/icon/setting/checked.svg);
}


QCheckBox {
    color: #2f2f2f;
    spacing: 5px;
}

QCheckBox::indicator {
    width: 16px;
    height: 16px;
}

QCheckBox::indicator:unchecked {
    image: url(:/icon/setting/unchecked.svg);
}

QCheckBox::indicator:checked {
    image: url(:/icon/setting/checked.svg);
}



QSpinBox {
    color: #444343;
    background-color: transparent;
    border-radius: 5px;
    border: 1px solid #7077A1;
}

QSpinBox::up-button {
    subcontrol-origin: border;
    subcontrol-position: top right;
    /* position at the top right corner */
    height: 12px;
    width: 10px;
    /* 16 + 2*1px border-width = 15px padding + 3px parent border */
    image: url(:/icon/setting/arrow-up.svg);
    padding-right: 4px;
}

QSpinBox::up-button:disabled,
QSpinBox::up-button:off {
    /* off state when value is max */
    height: 12px;
    width: 10px;
    image: url(:/icon/setting/arrow-up-disable.svg);
}

QSpinBox::down-button {
    subcontrol-origin: border;
    subcontrol-position: bottom right;
    height: 12px;
    width: 10px;
    /* 16 + 2*1px border-width = 15px padding + 3px parent border */
    image: url(:/icon/setting/arrow-down.svg);
    padding-right: 4px;
}

QSpinBox::down-button:disabled,
QSpinBox::down-button:off {
    height: 12px;
    width: 10px;
    /* off state when value in min */
    image: url(:/icon/setting/arrow-down-disable.svg);
}

QComboBox {
    height: 20px;
    color: #444343;
    border: 1px solid #7077A1;
    border-radius: 5px;
    padding: 1px 18px 1px 3px;
    min-width: 6em;
    background-color: transparent;
}

QComboBox:on {
    /* shift the text when the popup opens */
    /* padding-top: 3px; */
    /* padding-left: 4px; */
}


QComboBox::down-arrow {
    image: url(:/icon/setting/arrow-down.svg);
}

QComboBox::down-arrow:on {
    /* shift the arrow when popup is open */
    top: 1px;
    left: 1px;
}


QComboBox QAbstractItemView {
    border-width: 1px;
    /* border-style: solid; */
    border-radius: 4px;
    border-color: transparent;
    background-color: transparent;
    color: #313238;
    selection-background-color: rgb(60, 60, 60);
}

QLineEdit#FolderSelector {
    height: 18;
    border-radius: 5px;
    border: 1px solid #7077A1;
    padding: 1px 18px 1px 3px;
    background-color: transparent;
    min-height: 10px;
    /* margin-right: 35px; */
}

QLineEdit:focus#FolderSelector {
    border: 1px solid #424769;
    background-color: transparent;
}

QLineEdit::placeholder#FolderSelector {
    color: #767e89;
}


/* Common Component */

QScrollBar {
    width: 6px;
    margin-left: 2px;
    background-color: transparent;
}

QScrollBar::handle {
    background-color: #6e6e6e;
    border-radius: 2px;
    border: 1px solid #6e6e6e;
}

QScrollBar::add-line,
QScrollBar::sub-line {
    background: none;
}

QScrollBar::add-page,
QScrollBar::sub-page {
    background: none;
}

QScrollBar::up-arrow,
QScrollBar::down-arrow {
    height: 0;
    width: 0;
}

QScrollBar::add-line:vertical,
QScrollBar::sub-line:vertical {
    height: 0;
    width: 0;
}

QScrollBar::left-arrow,
QScrollBar::right-arrow {
    height: 0;
    width: 0;
}

QScrollBar::add-line:horizontal,
QScrollBar::sub-line:horizontal {
    height: 0;
    width: 0;
}