}


QPushButton#VideoGridDetailsBtn,
#VideoListDetailsBtn {
    qproperty-icon: url(:/icon/video/detail.svg);
    border: none;
    background-color: transparent;
}

QPushButton#VideoGridDownloadBtn,
#VideoListDownloadBtn {
    qproperty-icon: url(:/icon/video/download.svg);
    border: none;
    background-color: transparent;
}

QPushButton#DetailPanelCloseBtn {
    qproperty-icon: url(:/icon/video/close.svg);
    border: none;
    background-color: transparent;
}

QListWidget::item:selected#VideoListWidget {
    border: 2px solid #7077A1;
    border-radius: 5px;
    margin-top: 3px;
