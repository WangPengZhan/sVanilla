}

/* Download Page */

QListWidget#DownloadListWidget {
    background-color: transparent;
    padding: 10px;
}

QListWidget::item:selected#DownloadListWidget {
    border: 2px solid #7077A1;
    border-radius: 5px;
    margin-top: 3px;
    margin-bottom: 3px;
}

QPushButton#Delete {
    qproperty-icon: url(:/icon/download/delete.svg);
    border: none;
    background-color: transparent;
}

QPushButton#Start {
    qproperty-icon: url(:/icon/download/start.svg);
    border: none;
    background-color: transparent;
}

QPushButton#Pause {
    qproperty-icon: url(:/icon/download/pause.svg);
    border: none;
    background-color: transparent;
}

QPushButton#Folder {
    qproperty-icon: url(:/icon/download/folder.svg);
    border: none;
    background-color: transparent;
}

QPushButton#Detail {
    qproperty-icon: url(:/icon/download/details.svg);
