QToolTip {
    border: none;
    background-color: rgba(0, 0, 0, 10%);
}

/* windows system button */

QPushButton[system-button=true] {
    qproperty-iconSize: 12px 12px;
    min-width: 40px;
    border: none;
    padding: 0;
    background-color: transparent;
}

QPushButton#min-button {
    qproperty-icon: url(:/icon/bar/minimize.svg);
}

QPushButton#min-button:hover,
QAbstractButton#min-button:focus {
    background-color: rgba(0, 0, 0, 10%);
}

QPushButton#max-button {
    qproperty-icon: url(:/icon/bar/maximize.svg);
}

QPushButton#max-button:hover,
QPushButton#max-button:focus {
    background-color: rgba(0, 0, 0, 10%);
}

QPushButton#close-button {
    qproperty-icon: url(:/icon/bar/close.svg);
}

QPushButton#close-button:hover,
QPushButton#close-button:focus {
    background-color: #e81123;
}

/* Menu */

QMenu {
    padding: 4px;
    background: #dbdbdb;
    border: none;
    border-radius: 5px;
}

QMenu::indicator {
    left: 6px;
    width: 20px;
    height: 5px;
}

QMenu::icon {
    left: 6px;
}

QMenu::item {
    background: transparent;
    color: #444343;
    padding: 2px 18px;
}

QMenu::item:selected {
    background-color: rgba(0, 0, 0, 10%);
    border-radius: 3px;
}

QMenu::item:disabled {
    color: #a1a1a1;
}

QMenu::separator {
    height: 1px;
    border: none;
    background-color: #a7a6a6;
    margin: 6px 0;
}


/* Window */

MainWindow {
    background-color: transparent;
}

MainWindow[custom-style=true] {
    background-color: transparent;
}


QToolButton#IconButton {
    qproperty-icon: url(:/icon/home/icon.svg);
    min-width: 40px;
    border: none;
    padding: 20px;
    background-color: transparent;

}

/* BarBtn */
QPushButton#HomeBtn,
#GalleryBtn,
#DownloadBtn,
#SettingBtn {
    border: none;
    background-color: transparent;
}

/* Home Page */

SearchLineEdit#HomeLineEdit {
    border-radius: 5px;
    border: 1px solid #7077A1;
    padding: 8px 8px 8px 15px;
    background-color: transparent;
    min-height: 10px;
    /* margin-right: 22px; */
}

SearchLineEdit:focus#HomeLineEdit {
    border: 1px solid #424769;
    background-color: transparent;
}

SearchLineEdit::placeholder#HomeLineEdit {
    color: #767e89;
}

QPushButton#HomePageSubmit {
    qproperty-icon: url(:/icon/home/enter.svg);
    background-color: transparent;
    color: #5c5c5c;
    font-weight: 500;
    font-size: 10px;
}

QPushButton#SearchBtn {
    qproperty-icon: url(:/icon/home/search.svg);
    background-color: transparent;
    font-weight: 600;
    padding: 1px 5px;
    border-radius: 5px;
    /* border: 1px solid #607274; */
}

QPushButton:hover#SearchBtn,
QPushButton:focus#SearchBtn {
    background-color: transparent;
    /* border: 1px solid #607274; */
    color: #726b6b;
}


QPushButton#ClearBtn {
    qproperty-icon: url(:/icon/home/clear.svg);
    background-color: transparent;
    font-weight: 600;
    padding: 1px 5px;
    border-radius: 5px;
    /* border: 1px solid #607274; */
}

QPushButton:hover#ClearBtn,
QPushButton:focus#ClearBtn {
    background-color: transparent;
    /* border: 1px solid #607274; */
    color: #726b6b;
}

QPushButton#ClipBoardBtn {
    /* qproperty-icon: url(":/icon/clipboard.svg"); */
    background-color: #767e89;
    font-weight: 600;
    padding: 1px 5px;
    border-radius: 5px;
    /* border: 1px solid #607274; */

}


/* ClipBoardBtn */
QPushButton#ClipBoardBtn {
    qproperty-icon: url(:/icon/home/clipboard.svg);
    border: none;
    background-color: transparent;
}

/* HistoryBtn */
QPushButton#HistoryBtn {
    qproperty-icon: url(:/icon/home/history.svg);
    border: none;
    background-color: transparent;
}


QLabel#LineEditPlaceholderLabel {
    border-radius: 3px;
    background-color: transparent;
}

/* Video Page */

